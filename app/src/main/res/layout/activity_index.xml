<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/title_bg_color"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">


        <FrameLayout
            android:id="@+id/fl_body"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        </FrameLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/subzero_foot_line" />

        <RadioGroup

            android:id="@+id/rg_activtiy_index_foot_navi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_activity_index_foot_navi_1"
                style="@style/rb_activity_index_foot_navi"
                android:checked="true"
                android:drawableTop="@drawable/selector_activity_index_foot_iv1"
                android:text="趋势" />

            <RadioButton
                android:id="@+id/rb_activity_index_foot_navi_2"
                style="@style/rb_activity_index_foot_navi"
                android:drawableTop="@drawable/selector_activity_index_foot_iv2"
                android:text="择机" />

            <RadioButton
                android:id="@+id/rb_activity_index_foot_navi_3"
                style="@style/rb_activity_index_foot_navi"
                android:drawableTop="@drawable/selector_activity_index_foot_iv3"
                android:text="交流" />

            <RadioButton
                android:id="@+id/rb_activity_index_foot_navi_4"
                style="@style/rb_activity_index_foot_navi"
                android:drawableTop="@drawable/selector_activity_index_foot_iv4"
                android:text="我的" />
        </RadioGroup>
    </LinearLayout>
</LinearLayout>