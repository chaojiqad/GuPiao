<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <ImageView style="@style/videocatory_item_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="68dp">

            <RadioButton
                android:id="@+id/rd1_pay_newsdetail_thrend"
                style="@style/videocatory_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:drawableLeft="@mipmap/list_icon_zfb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="58dp"
                android:paddingTop="12dp"
                android:text="支付宝支付"
                android:textColor="@color/content_textcolor"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="58dp"
                android:paddingTop="36dp"
                android:text="有支付宝账号的用户支付"
                android:textSize="14sp" />
        </RelativeLayout>

        <ImageView style="@style/videocatory_item_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="68dp">

            <RadioButton
                android:id="@+id/rd2_pay_newsdetail_thrend"
                style="@style/videocatory_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:drawableLeft="@mipmap/list_icon_wx" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="58dp"
                android:paddingTop="12dp"
                android:text="微信支付"
                android:textColor="@color/content_textcolor"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="58dp"
                android:paddingTop="36dp"
                android:text="有安装微信的用户使用"
                android:textSize="14sp" />
        </RelativeLayout>

        <ImageView style="@style/videocatory_item_line" />

        <RelativeLayout
            android:id="@+id/rl_virtualcoin"
            android:layout_width="match_parent"
            android:layout_height="68dp">

            <RadioButton
                android:id="@+id/rd3_pay_newsdetail_thrend"
                style="@style/videocatory_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:drawableLeft="@mipmap/lis_icon_zf" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="58dp"
                android:paddingTop="12dp"
                android:text="虚拟币支付"
                android:textColor="@color/content_textcolor"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="58dp"
                android:paddingTop="36dp"
                android:text="有虚拟币的用户支付"
                android:textSize="14sp" />
        </RelativeLayout>

        <ImageView style="@style/videocatory_item_line" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_pay"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="16dp"
        android:background="#cc3300"
        android:gravity="center"
        android:text="确认支付"
        android:textColor="#fff"
        android:textSize="20sp" />
</LinearLayout>