<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">


    <com.subzero.shares.view.CircleImageView
        android:layout_marginTop="20dp"
        android:id="@+id/iv_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:padding="10dp"
        android:src="@mipmap/qq" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="36dp"
        android:padding="6dp"

        >

        <TextView
            android:id="@+id/tv_live_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="每日一招"
            android:maxLength="7"
            android:ellipsize="end"
            android:textColor="@color/textcolor1"
            android:textSize="@dimen/textsize1" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/tv_tag"
            android:src="@mipmap/label" />

        <TextView
            android:id="@+id/tv_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="炒股技术"
            android:textSize="@dimen/textsize2" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_brief"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:text="如何从股票小白，快速成长为资深专家，精选每日事实话题，带你解开蒙面的面纱，课程精细，堪称绝！不想错过的朋友快来看看吧！"
        android:textColor="@color/textcolor2"
        android:textSize="@dimen/textsize2" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="36dp"
        android:padding="6dp">

        <TextView
            android:id="@+id/tv_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="主讲人:"
            android:textColor="@color/textcolor3"
            android:textSize="@dimen/textsize2" />

        <TextView
            android:id="@+id/tv_hoster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_holder"
            android:text="顾问——彭大海"
            android:textColor="@color/textcolor2"
            android:textSize="@dimen/textsize2" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@+id/tv_clock"
            android:text="7月12日"
            android:textColor="@color/textcolor3"
            android:textSize="@dimen/textsize2" />

        <TextView
            android:id="@+id/tv_clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="13:30-15:00"
            android:textColor="@color/textcolor2"
            android:textSize="@dimen/textsize2" />

    </RelativeLayout>

    <RelativeLayout

        android:layout_width="fill_parent"
        android:layout_height="62dp"
        android:padding="6dp">

        <LinearLayout
            android:id="@+id/lr_live_detail_1"
            android:layout_width="86dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_good"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textcolor2"
                android:textSize="@dimen/textsize2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="赞"
                android:textColor="@color/textcolor3"
                android:textSize="@dimen/textsize2" />
        </LinearLayout>
        <!--分割线-->
        <View
            android:id="@+id/v_1"
            android:layout_width="1dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/lr_live_detail_1"
            android:background="@color/separation_line" />

        <LinearLayout
            android:id="@+id/lr_live_detail_2"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/v_1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textcolor2"
                android:textSize="@dimen/textsize2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="评论"
                android:textColor="@color/textcolor3"
                android:textSize="@dimen/textsize2" />
        </LinearLayout>
        <!--分割线-->
        <View
            android:id="@+id/v_2"
            android:layout_width="1dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/lr_live_detail_2"
            android:background="@color/separation_line" />


        <LinearLayout
            android:id="@+id/lr_live_detail_3"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/v_2"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_listener"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textcolor2"
                android:textSize="@dimen/textsize2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收听"
                android:textColor="@color/textcolor3"
                android:textSize="@dimen/textsize2" />
        </LinearLayout>
        <!--分割线-->
        <View
            android:id="@+id/v_3"
            android:layout_width="1dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/lr_live_detail_3"
            android:background="@color/separation_line" />


        <LinearLayout
            android:id="@+id/lr_live_detail_4"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/v_3"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_historylisten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textcolor2"
                android:textSize="@dimen/textsize2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="历史收听"
                android:textColor="@color/textcolor3"
                android:textSize="@dimen/textsize2" />
        </LinearLayout>
    </RelativeLayout>
    <!--分割线-->
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="14dp"
        android:background="@color/separation_rl_bg">

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:background="@color/separation_line" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/separation_line" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_comment"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="62dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_comment"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="8dp"
                android:src="@mipmap/comment" />
            <TextView
                android:id="@+id/tv_subscribe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textcolor3"
                android:textSize="@dimen/textsize3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="62dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_awards"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="8dp"
                android:src="@mipmap/dashang"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="打赏"
                android:textColor="@color/textcolor3"
                android:textSize="@dimen/textsize3" />
        </LinearLayout>

        <View
            android:id="@+id/v_4"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/rl_awards"
            android:background="@color/separation_line" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="62dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_live"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="8dp"
                android:src="@mipmap/zhibo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="直播"
                android:textColor="@color/textcolor3"
                android:textSize="@dimen/textsize3" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>