<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/title_bg_color"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/usercenter_rl_layout_height"
            android:background="@color/usercenter_rl_bg">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="@dimen/space_left"
                android:src="@mipmap/nav_ico_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="常见问题"
                android:textColor="@color/usercenter_tv"
                android:textSize="@dimen/textsize1" />
        </RelativeLayout>


        <com.subzero.shares.activity.xlistview.XListView
            android:divider="@null"
            android:id="@+id/lv_user_common"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        </com.subzero.shares.activity.xlistview.XListView>


        <TextView
            android:id="@+id/tv_ask_question"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/item_usercenter_ll_layout_height"
            android:layout_alignParentBottom="true"
            android:background="#CC3300"
            android:gravity="center"
            android:text="提问"
            android:textColor="#fff"
            android:textSize="@dimen/textsize2" />
    </LinearLayout>
</LinearLayout>