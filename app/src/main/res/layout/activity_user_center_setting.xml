<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/title_bg_color"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/usercenter_rl_layout_height"
            android:background="@color/usercenter_rl_bg">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="@dimen/space_left"
                android:src="@mipmap/nav_ico_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="设置"
                android:textColor="@color/usercenter_tv"
                android:textSize="@dimen/textsize1" />
        </RelativeLayout>


        <!--分隔条-->
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="12dp"
            android:background="@color/separation_rl_bg">

        </RelativeLayout>

        <include layout="@layout/view_deline" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/space_left"
            android:paddingRight="@dimen/space_right">

            <RelativeLayout
                android:id="@+id/rl_edit_password"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/item_usercenter_ll_layout_height">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/iv_item1"
                    android:text="修改密码"
                    android:textColor="@color/textcolor2"
                    android:textSize="@dimen/textsize2" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/list_icon_more" />
            </RelativeLayout>

            <include layout="@layout/view_deline" />

            <RelativeLayout
                android:id="@+id/rl_common_issue"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/item_usercenter_ll_layout_height">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/iv_item1"
                    android:text="常见问题"
                    android:textColor="@color/textcolor2"
                    android:textSize="@dimen/textsize2" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/list_icon_more" />
            </RelativeLayout>

            <include layout="@layout/view_deline" />

            <RelativeLayout
                android:id="@+id/rl_about_us"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/item_usercenter_ll_layout_height">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/iv_item1"
                    android:text="关于我们"
                    android:textColor="@color/textcolor2"
                    android:textSize="@dimen/textsize2" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/list_icon_more" />
            </RelativeLayout>

            <include layout="@layout/view_deline" />

            <RelativeLayout
                android:id="@+id/customer_service"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/item_usercenter_ll_layout_height">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/iv_item1"
                    android:text="联系客服"
                    android:textColor="@color/textcolor2"
                    android:textSize="@dimen/textsize2" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/list_icon_more" />
            </RelativeLayout>
        </LinearLayout>

        <include layout="@layout/view_deline" />
    </LinearLayout>
</LinearLayout>