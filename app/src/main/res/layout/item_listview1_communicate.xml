<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:paddingTop="20dp">


        <com.subzero.shares.view.CircleImageView
            android:id="@+id/iv_headView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_left_right"
            android:src="@drawable/ic_main" />

        <ImageView
            android:layout_width="14dp"
            android:layout_height="13dp"
            android:layout_alignTop="@id/iv_headView"
            android:layout_marginTop="2dp"
            android:layout_toLeftOf="@id/tv_virtual_coin"
            android:src="@mipmap/lis_icon_zf" />

        <TextView
            android:id="@+id/tv_name_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_headView"
            android:layout_marginLeft="@dimen/margin_left_right"
            android:layout_toRightOf="@id/iv_headView"
            android:text="杨琳琳" />

        <TextView
            android:id="@+id/tv_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_headView"
            android:layout_marginLeft="@dimen/margin_left_right"
            android:layout_toRightOf="@id/iv_headView"
            android:text="股票天气" />

        <TextView
            android:id="@+id/tv_virtual_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/iv_headView"
            android:layout_marginRight="@dimen/margin_left_right"
            android:paddingLeft="5dp"
            android:text="10虚拟币" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_headView"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/list_icon_xxzx" />

            <TextView
                android:id="@+id/tv_coment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="200" />

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="4dp"
                android:src="@mipmap/bg_ico_time" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:text="12:34" />
        </LinearLayout>


    </RelativeLayout>

    <ImageView
        style="@style/videocatory_item_line"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:id="@+id/tv_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="根据各种经济现象怎么判断股市变化"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/iv_item_img1"
            style="@style/icon_wid_hei_communicate"
            android:layout_margin="10dp"
            android:layout_weight="1" />

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/iv_item_img2"
            style="@style/icon_wid_hei_communicate"
            android:layout_margin="10dp"
            android:layout_weight="1" />

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/iv_item_img3"
            style="@style/icon_wid_hei_communicate"
            android:layout_margin="10dp"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bgcolor"
        android:orientation="vertical">

        <ImageView style="@style/videocatory_item_line" />

        <ImageView
            style="@style/videocatory_item_line"
            android:layout_height="0dp"
            android:layout_marginTop="12dp" />
    </LinearLayout>


</LinearLayout>