<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/usercenter_rl_layout_height"
            android:background="@color/usercenter_rl_bg">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/nav_ico_back"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space_left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人中心"
                android:layout_centerInParent="true"
                android:textSize="@dimen/textsize1"
                android:textColor="@color/usercenter_tv" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收支记录"
                android:textSize="@dimen/textsize2"
                android:textColor="#fff"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/space_right" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="174dp"
            android:background="@color/usercenter_rl_bg">

            <ImageView
                android:id="@+id/iv_userlogo"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@mipmap/qq"
                android:layout_centerHorizontal="true"
                android:layout_margin="14dp" />

            <TextView
                android:id="@+id/tv_usercenter_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/iv_userlogo"
                android:gravity="center"
                android:textSize="26sp"
                android:textColor="#fff" />

            <TextView
                android:layout_centerHorizontal="true"
                android:layout_width="80dp"
                android:layout_height="24dp"
                android:text="虚拟币"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="@dimen/textsize1"
                android:layout_below="@+id/tv_usercenter_grade"
                android:layout_marginTop="4dp" />
            <!--分隔线-->
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/separation_line"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>
        <!--分隔条-->
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="12dp"
            android:background="@color/separation_rl_bg">

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/separation_line"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/item_usercenter_ll_layout_height">

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/separation_line"
                android:layout_alignParentBottom="true" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的支出"
                android:textSize="@dimen/textsize2"
                android:textColor="@color/textcolor2"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_item1"
                android:layout_marginLeft="@dimen/space_left" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/list_icon_more"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/space_right" />
        </RelativeLayout>
        <!--分隔条-->
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="12dp"
            android:background="@color/separation_rl_bg">

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/separation_line"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/item_usercenter_ll_layout_height">

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/separation_line"
                android:layout_alignParentBottom="true" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的赚取"
                android:textSize="@dimen/textsize2"
                android:textColor="@color/textcolor2"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_item1"
                android:layout_marginLeft="@dimen/space_left" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/list_icon_more"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/space_right" />
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/item_usercenter_ll_layout_height"
        android:text="充值"
        android:textSize="@dimen/textsize2"
        android:gravity="center"
        android:textColor="#fff"
        android:background="#CC3300"
        android:layout_alignParentBottom="true" />
</RelativeLayout>