<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/title_bg_color"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/bgcolor"
        android:orientation="vertical">

        <include layout="@layout/basetitle_communicate" />


        <ImageView
            style="@style/videocatory_item_line"
            android:layout_height="1dp"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:id="@+id/ll_man"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:text="男"
                android:textColor="@color/content_textcolor"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/iv_start_man"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="18dp"
                android:src="@mipmap/duigou" />
        </LinearLayout>

        <ImageView
            style="@style/videocatory_item_line"
            android:layout_height="1dp" />

        <ImageView
            style="@style/videocatory_item_line"
            android:layout_height="1dp"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:id="@+id/ll_woman"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@android:color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:text="女"
                android:textColor="@color/content_textcolor"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/iv_start_woman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="18dp"
                android:src="@mipmap/duigou" />
        </LinearLayout>

        <ImageView
            style="@style/videocatory_item_line"
            android:layout_height="1dp" />

        <ImageView
            style="@style/videocatory_item_line"
            android:layout_height="1dp"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:id="@+id/ll_secret"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@android:color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:text="保密"
                android:textColor="@color/content_textcolor"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/iv_start_secret"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="18dp"
                android:src="@mipmap/duigou" />
        </LinearLayout>

        <ImageView
            style="@style/videocatory_item_line"
            android:layout_height="1dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_ensure_sex"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:textSize="18sp"
        android:text="确认" />
</LinearLayout>
