<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/title_bg_color"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/usercenter_rl_layout_height"
            android:background="@color/usercenter_rl_bg">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="@dimen/space_left"
                android:src="@mipmap/nav_ico_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="关于我们"
                android:textColor="@color/usercenter_tv"
                android:textSize="@dimen/textsize1" />
        </RelativeLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="76dp"
            android:gravity="center"
            android:textColor="@color/textcolor1"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView

            android:layout_margin="5dp"
            android:scaleType="centerCrop"
            android:id="@+id/iv_ac_about_us_smeta"
            android:layout_width="fill_parent"
            android:layout_height="120dp"/>

        <TextView
            android:id="@+id/tv_ac_about_us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="@color/textcolor2"
            android:textSize="@dimen/textsize3" />

        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="版本号：1.0"
            android:textColor="@color/textcolor2"
            android:textSize="@dimen/textsize3" />
    </LinearLayout>
</LinearLayout>