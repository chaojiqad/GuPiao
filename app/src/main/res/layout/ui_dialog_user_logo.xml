<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="186dp"
        android:orientation="vertical"
        android:layout_margin="10dp">
        <Button
            android:id="@+id/bt_photograph"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="@drawable/shape_dialog_user_logo_button1"
            android:gravity="center"
            android:text="拍照"
            android:textColor="#CC3300"
            android:textSize="18sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/separation_line"/>
        <Button
            android:id="@+id/bt_photo"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="@drawable/shape_dialog_user_logo_button2"
            android:gravity="center"
            android:text="从相册上传"
            android:textColor="#CC3300"
            android:textSize="18sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="12dp">

        </LinearLayout>
        <Button
            android:id="@+id/bt_cancel"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="@drawable/shape_dialog_exit_button"
            android:gravity="center"
            android:text="取消"
            android:textColor="#CC3300"
            android:textSize="18sp"/>
    </LinearLayout>
</LinearLayout>