<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/usercenter_rl_layout_height"
        android:background="@color/usercenter_rl_bg">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/nav_ico_back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:layout_centerInParent="true"
            android:textSize="@dimen/textsize1"
            android:textColor="@color/usercenter_tv" />
    </RelativeLayout>

    <!--分隔条-->
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="12dp"
        android:background="@color/separation_rl_bg">

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/separation_line"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/item_usercenter_ll_layout_height">

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/separation_line"
            android:layout_alignParentBottom="true" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:textSize="@dimen/textsize2"
            android:textColor="@color/textcolor2"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_item1"
            android:layout_marginLeft="@dimen/space_left" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/list_icon_more"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/space_right" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/item_usercenter_ll_layout_height">

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/separation_line"
            android:layout_alignParentBottom="true" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="常见问题"
            android:textSize="@dimen/textsize2"
            android:textColor="@color/textcolor2"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_item1"
            android:layout_marginLeft="@dimen/space_left" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/list_icon_more"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/space_right" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/item_usercenter_ll_layout_height">

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/separation_line"
            android:layout_alignParentBottom="true" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于我们"
            android:textSize="@dimen/textsize2"
            android:textColor="@color/textcolor2"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_item1"
            android:layout_marginLeft="@dimen/space_left" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/list_icon_more"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/space_right" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/item_usercenter_ll_layout_height">

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/separation_line"
            android:layout_alignParentBottom="true" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系客服"
            android:textSize="@dimen/textsize2"
            android:textColor="@color/textcolor2"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_item1"
            android:layout_marginLeft="@dimen/space_left" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/list_icon_more"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/space_right" />
    </RelativeLayout>
</LinearLayout>